@model HabitTracker.Web.Models.Habit

@{
    ViewData["Title"] = "Delete Habit";
}

<div class="container mt-4">
    <h2>Delete Habit</h2>

    <div class="alert alert-warning">
        <h4>Are you sure you want to delete this habit?</h4>
        <p>This action cannot be undone and will delete all progress data associated with this habit.</p>
    </div>

    <dl class="row">
        <dt class="col-sm-3">Name</dt>
        <dd class="col-sm-9">@Model.Name</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Current Streak</dt>
        <dd class="col-sm-9">@Model.CurrentStreak days</dd>

        <dt class="col-sm-3">Created At</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
