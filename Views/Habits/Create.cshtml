@model HabitTracker.Web.Models.Habit

@{
    ViewData["Title"] = "Create New Habit";
}

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fc;
        color: #333;
    }

    .card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        background-color: #fff;
    }

    .card-title {
        font-weight: 600;
        color: #4a4a4a;
    }

    .form-label {
        font-weight: 500;
        color: #555;
    }

    .form-control {
        border-radius: 12px;
        border: 1px solid #ddd;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            border-color: #a682ff;
            box-shadow: 0 0 0 0.2rem rgba(166, 130, 255, 0.25);
        }

    .btn-primary {
        background-color: #a682ff;
        border-color: #a682ff;
        border-radius: 12px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #8b6ef5;
            border-color: #8b6ef5;
        }

    .btn-secondary {
        border-radius: 12px;
        font-weight: 500;
    }

    h2 {
        font-weight: 600;
        color: #5b4b8a;
        text-align: center;
        margin-bottom: 30px;
    }

    .container {
        max-width: 600px;
    }
</style>

<div class="container mt-5">
    <div class="card p-4">
        <h2>Create a New Habit</h2>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Habit Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter habit name..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Describe your habit..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary px-4">Create</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
