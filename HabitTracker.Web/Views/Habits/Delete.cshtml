@model HabitTracker.Web.Models.Habit

@{
    ViewData["Title"] = "Delete Habit";
}

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #f8f9fc;
        color: #333;
    }

    .card {
        border: none;
        border-radius: 20px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        background-color: #fff;
    }

    h2 {
        font-weight: 600;
        color: #5b4b8a;
        text-align: center;
        margin-bottom: 25px;
    }

    .alert {
        border-radius: 12px;
        border: none;
        background-color: #fff2f2;
        color: #b94a48;
        box-shadow: 0 4px 10px rgba(185, 74, 72, 0.1);
    }

    dt {
        font-weight: 600;
        color: #4a4a4a;
    }

    dd {
        color: #555;
        margin-bottom: 10px;
    }

    .btn-danger {
        background-color: #e26a6a;
        border-color: #e26a6a;
        border-radius: 12px;
        font-weight: 500;
        padding: 8px 24px;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background-color: #d14f4f;
            border-color: #d14f4f;
        }

    .btn-secondary {
        border-radius: 12px;
        font-weight: 500;
        padding: 8px 24px;
    }

    .container {
        max-width: 650px;
    }
</style>

<div class="container mt-5">
    <div class="card p-4">
        <h2>Delete Habit</h2>

        <div class="alert alert-warning mb-4">
            <h5 class="fw-semibold">Are you sure you want to delete this habit?</h5>
            <p class="mb-0">This action <strong>cannot be undone</strong> and will remove all progress data associated with this habit.</p>
        </div>

        <dl class="row mb-4">
            <dt class="col-sm-4">Name</dt>
            <dd class="col-sm-8">@Model.Name</dd>

            <dt class="col-sm-4">Description</dt>
            <dd class="col-sm-8">@Model.Description</dd>

            <dt class="col-sm-4">Current Streak</dt>
            <dd class="col-sm-8">@Model.CurrentStreak days</dd>

            <dt class="col-sm-4">Created At</dt>
            <dd class="col-sm-8">@Model.CreatedAt.ToString("yyyy-MM-dd")</dd>
        </dl>

        <form asp-action="Delete" method="post" class="d-flex justify-content-between">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Yes, Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
